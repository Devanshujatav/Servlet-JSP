<body>
    <h2>Hello World!</h2>
    <h3>Get Techie Information</h3>
    
    <form action="getTechies" method="get">
        <div class="form-group">
            <label for="aid">Techie ID:</label>
            <input type="text" id="aid" name="aid" placeholder="Enter techie ID" required>
        </div>
        <div class="form-group">
            <input type="submit" value="Get Techie Details">
        </div>
    </form>
    
    <script>
        // Optional: Add client-side validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const aidInput = document.getElementById('aid');
            const aidValue = aidInput.value.trim();
            
            if (!aidValue) {
                alert('Please enter a Techie ID');
                e.preventDefault();
                return;
            }
            
            if (!/^\d+$/.test(aidValue)) {
                alert('Please enter a valid numeric ID');
                e.preventDefault();
                return;
            }
        });
    </script>
